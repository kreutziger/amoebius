a(ui-sref='create') Create new document
script
  $(function() {$('#accordion').accordion({animate: false});});
div(id='accordion')
  h3 Your Documents
  div
    div(ng-if='own_docs', ng-repeat='doc in own_docs').clear.repeat-element
      h4 {{$index + 1}} {{doc.name}}
      ul
        li.look 
          a(ui-sref='view({id: doc._id})') View 
        li.edit 
          a(ui-sref='edit({id: doc._id})') Edit
        li.delete 
          a(ui-sref='delete({id: doc._id})') Delete
        li.link 
          a(ui-sref='link({id: doc._id})') Link
        li.sticker 
          a(ui-sref='sticker({id: doc._id})') Sticker
        li.download
          a(href="{{'/download/' + doc._id}}") Download
    div(ng-if='own_message')
      h4 {{own_message}}
  h3 Linked Documents
  div
    div(ng-if='other_docs', ng-repeat='doc in other_docs').clear.repeat-element
      h4 {{$index + 1}} {{doc.name}}
      ul
        li.look 
          a(ui-sref='view({id: doc._id})') View 
        li.delete 
          a(ui-sref='delete_link({id: doc._id})') Delete
        li.sticker 
          a(ui-sref='sticker({id: doc._id})') Sticker
        li.download
          a(href="{{'/download/' + doc._id}}") Download
    div(ng-if='other_message')
      h4 {{other_message}}
