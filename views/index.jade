doctype html
html(ng-app="amoebius")
  head
    meta(charset="utf-8")
    base(href="/")
    title Welcome to the amoebius document management app
    link(rel="stylesheet", href="css/app.css")
  body
    div
      if !user
        a(ui-sref='login') Login
      if user
        p Hello 
          a(ui-sref='account') #{user.name}
        a(href='logout') Logout
      h2 Welcome to amoebius
      <div ui-view></div>
    script(src='js/lib/jquery/jquery.js')
    script(src='js/lib/jquery/jquery-ui.js')
    script(src='js/lib/angular/angular.js')
    script(src='js/lib/angular/angular-ui-router.js')
    script(src='js/app.js')
    script(src='js/controller.js')
