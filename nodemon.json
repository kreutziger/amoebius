{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "*.swp",
        "*.swo",
        "*.jade",
        "/data/*",
        "/public/*"
    ],
    "verbose": true,
    "execMap": {
        "js": "node"
    },
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json"
}
